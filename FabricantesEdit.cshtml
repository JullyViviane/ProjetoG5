@model Modeloa . Cadastros . Fabricante
@ {
    Layout  =  " ~ / Views / Shared / _LayoutPage1.cshtml " ;
    ViewBag . Title  =  " Alterando os dados de um FABRICANTE " ; }
@ using ( Html . BeginForm ())
{
    @ Html.AntiForgeryToken ()
    < div  class = " panel panel-primary " >
        < div  class = " panel-header " >
            Altera çã o  dos  dados  de  um  FABRICANTE
        </ div >
        < div  class = " panel-body " >
            < div  class = " form-horizontal " >
                @ Html.ValidationSummary (true , " " , new  {  @class  =  " text-danger "  } )
                @ Html.HiddenFor (model  = >  model . FabricanteId )
                < div  class = " form-group " >
                    @ Html.LabelFor (model  = >  model . Nome , htmlAttributes :
                    novo  {  @class  =  " control-label col-md-2 "  } )
                    < div  class = " col-md-10 " >
                        @ Html.EditorFor (model  = >  model . Nome , novo
                        {
                            htmlAttributes  =
                        novo  {  @class  =  " form-control "  }
                        } )
                        @ Html.ValidationMessageFor (model  = >  model . Nome , " " ,
                        novo  {  @class  =  " text-danger "  } )
                    </ div >
                </ div >
            </ div >
            < div  class = " panel-footer panel-info " >
                < div  class = " col-md-offset-2 col-md-10 " >
                    < input  type = " submit "  value = " Gravar mudanças "  class = " btn btn-info " />
                    @ Html.ActionLink ( " Retornar para a listagem de FABRICANTES " , " Índice " , nulo ,
                    novo  {  @class  =  " btn btn-warning "  } )
                </ div >
                < Br />
                < Br />
            </ div >
        </ div >
    </ div >
}
@section ScriptPage {
    < script  src = " ~ / Scripts / jquery.validate.min.js " > </ script >
    < script  src = " ~ / Scripts / jquery.validate.unobtrusive.min.js " > </ script >
}
